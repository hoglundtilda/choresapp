model Category {
  id     String  @id @default(uuid())
  title  String
  chores Chore[]

  user_id String
  owner   User   @relation(fields: [user_id], references: [id])
}

model Chore {
  id         String    @id @default(uuid())
  label      String
  start_date DateTime  @default(now())
  end_date   DateTime?
  // archive      Boolean
  // time_records Time_Record[]

  category_id String
  user_id     String
  owner       User     @relation(fields: [user_id], references: [id])
  category    Category @relation(fields: [category_id], references: [id])
}

model User {
  id           String   @id @default(uuid())
  created_at   DateTime @default(now())
  email        String   @unique
  display_name String
  password     String   @db.VarChar(82)

  Category Category[]
  Chore    Chore[]
}
