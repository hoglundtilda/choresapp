{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2022", "es2021.promise", "esnext"],
    "outDir": "build",
    "removeComments": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", ".eslintrc.js", "eslint.config.mjs"],
  "exclude": ["node_modules/**/*", "services/authService/Passport.Strategy.ts"]
}

