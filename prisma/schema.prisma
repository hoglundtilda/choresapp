generator client {
  provider = "prisma-client-js"
  // Do not use this
  // output   = "../src/_generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @unique @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  owner  User    @relation(fields: [userId], references: [id])
  chores Chore[]
}

model Chore {
  id        String    @id @unique @default(uuid())
  label     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  startDate DateTime  @default(now())
  endDate   DateTime?

  categoryId  String?
  userId      String
  owner       User         @relation(fields: [userId], references: [id])
  category    Category?    @relation(fields: [categoryId], references: [id])
  timeRecords TimeRecord[]
}

model TimeRecord {
  id        String   @id @unique @default(uuid())
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  userId  String
  choreId String
  owner   User   @relation(fields: [userId], references: [id])
  chore   Chore  @relation(fields: [choreId], references: [id])
}

model User {
  id          String   @id @unique @default(uuid())
  createdAt   DateTime @default(now())
  email       String   @unique
  displayName String
  password    String   @db.VarChar(82)

  categories  Category[]
  chores      Chore[]
  timeRecords TimeRecord[]
}
